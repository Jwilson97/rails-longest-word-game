<h1>Longest Word Game</h1>
<!-- inject ruby code to iterate each random letter -->
<div class="letters-array">
  <ul>
    <% @letters_array.each do |letter| %>
    <li><%= letter %></li>
    <% end %>
  </ul>
</div>

<form action="/score" method="post" class="form-group">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters_array, @letters_array %>
  <div>
    <label class="label" for="answer">What is the longest word you can find?</label>
  </div>
  <!-- <div>
    <input type="text" name="answer" class="form-control">
    <input type="submit" value="Play" class="btn btn-primary">
  </div> -->
  <div class="input-group mb-3" style="margin-left: 50px; width: 500px;">
    <input type="text" name="answer" class="form-control" placeholder="Longest word" aria-label="Longest word" aria-describedby="button-addon2">
    <div class="input-group-append">
      <input class="btn btn-primary" type="submit" id="button-addon2" value="Play">
    </div>
  </div>
</form>
